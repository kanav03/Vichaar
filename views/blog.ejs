<%- include('./partials/head') %>
<title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <main class="mb-auto" style="flex: 1 0 auto;">
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="blog cover image" width="800px">
        <pre><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="profile_image " width="50px">
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3 ">
                    <input type="text" name="content"
                    class="form-control"
                    placeholder="Enter your comment" >
                    
                  </div>
                  <button type="submit" class="btn btn-sm btn-primary  ">Add</button>
                
            </form>
            
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= comment.createdBy.profileImageURL %>" alt="profile_image " width="50px">
                    <%= comment.createdBy.fullName %>
                    <pre>
                        <%= comment.content %>
                    </pre>
                </div>
             
            <% }) %>
        </div>
        
    </div>
    <footer class="footer mt-3 py-3 bg-dark text-white text-center ">
        <div class="container">
          <span class="text-muted">&copy; Vichaar blogging platform Inc</span>
          <div class="d-flex justify-content-center">
            <div class="p-2">
              <h5>Animesh</h5>
              <a href="https://www.instagram.com/animesh" target="_blank"><i class="fab fa-instagram"></i></a>
              <a href="https://twitter.com/animesh" target="_blank"><i class="fab fa-twitter"></i></a>
              <a href="https://www.linkedin.com/in/animesh" target="_blank"><i class="fab fa-linkedin"></i></a>
            </div>
            <div class="p-2">
              <h5>Kanav</h5>
              <a href="https://www.instagram.com/kanav" target="_blank"><i class="fab fa-instagram"></i></a>
              <a href="https://twitter.com/kanav" target="_blank"><i class="fab fa-twitter"></i></a>
              <a href="https://www.linkedin.com/in/kanav" target="_blank"><i class="fab fa-linkedin"></i></a>
            </div>
            <div class="p-2">
              <h5>Abhinav</h5>
              <a href="https://www.instagram.com/abhinav" target="_blank"><i class="fab fa-instagram"></i></a>
              <a href="https://twitter.com/abhinav" target="_blank"><i class="fab fa-twitter"></i></a>
              <a href="https://www.linkedin.com/in/abhinav" target="_blank"><i class="fab fa-linkedin"></i></a>
            </div>
          </div>
          <span class="text-white">&copy; 2024 Vichaar blogging. All rights reserved.</span>
        </div>
      </footer>
    <%- include('./partials/scripts') %>
    </main>
</body>
</html>
